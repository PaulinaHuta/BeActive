<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content"
    tools:context=".CustomDialog">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/selectGenderTitle"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        android:textSize="30dp"/>

    <View style="@style/Divider" android:layout_marginTop="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:translationX="-70dp">
      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_marginRight="15dp"
          android:src="@drawable/walking_male_00">

      </ImageView>
        <View
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:layout_marginBottom="-10dp"
            android:background="@android:color/darker_gray" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/walking_female_00">

        </ImageView>
    </LinearLayout>

    <View style="@style/Divider" android:layout_marginTop="210dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:translationX="-70dp">
        <Button
            android:id="@+id/btn_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genderMale"
            android:layout_marginLeft="10dp"
            ></Button>
        <Button
            android:id="@+id/btn_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genderFemale"
            ></Button>

    </LinearLayout>

</RelativeLayout >